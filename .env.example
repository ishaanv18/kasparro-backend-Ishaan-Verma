# Database Configuration
# IMPORTANT: Set these values in your .env file (never commit .env to git)
POSTGRES_USER=kasparro
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=kasparro_db
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
DATABASE_URL_SYNC=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# API Keys (Add your keys here)
COINPAPRIKA_API_KEY=your_coinpaprika_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ETL Configuration
ETL_SCHEDULE_MINUTES=30
ETL_BATCH_SIZE=1000
ETL_RATE_LIMIT_REQUESTS=10
ETL_RATE_LIMIT_PERIOD=60

# CSV Configuration
CSV_DATA_PATH=/app/data/crypto_data.csv

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development
